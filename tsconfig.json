{
  "compilerOptions": 
  {
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "es2016",
    "lib": [
      "es6",
      "dom"
    ],
    "types": [
      // add node as an option
      "node",
      "reflect-metadata"
    ],
    "typeRoots": [
      // add path to @types
      "node_modules/@types"
    ],
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "db"
  ]
}